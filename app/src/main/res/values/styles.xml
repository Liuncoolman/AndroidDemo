<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ChooseEditText">
        <attr name="cet_ChooseBgColor" format="reference|color" />
        <attr name="cet_ChooseTextColor" format="reference|color" />
        <attr name="cet_TextSize" format="reference|dimension" />
        <attr name="cet_Hint" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="TimeLineView">
        <attr name="timelineRadiusDistance" format="dimension" />
        <attr name="timelineRadius" format="dimension" />
        <attr name="timelineOtherColor" format="color|reference" />
        <attr name="timelineCount" format="integer" />
        <attr name="timelineWidth" format="dimension" />
        <attr name="timelineMarginTop" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>
